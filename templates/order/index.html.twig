{% extends 'base.html.twig' %}

{% block title %}Заказы - Система управления{% endblock %}

{% block body %}
    
        <h1>Управление заказами</h1>
        <a href="{{ path('app_order_new') }}" >
            Создать заказ
        </a>
   


    <div >
        <a href="{{ path('app_client_index') }}" >
            Назад к клиентам
        </a>
        <a href="{{ path('app_dish_index') }}" >
            Перейти к меню
        </a>
    </div>

    {% if orders|length > 0 %}
        
            <table >
                <thead >
                    <tr>
                        <th>ID</th>
                        <th>Клиент</th>
                        <th>Блюда</th>
                        <th>Сумма</th>
                        <th>Дата заказа</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>
                            <strong>{{ order.client.name }}</strong><br>
                            <small >{{ order.client.phone }}</small>
                        </td>
                        <td>
                            <ul>
                                {% for dish in order.dishes %}
                                    <li>{{ dish.name }} - {{ dish.price }} руб.</li>
                                {% endfor %}
                            </ul>
                        </td>
                        <td><strong>{{ order.totalAmount }} руб.</strong></td>
                        <td>{{ order.createdAt ? order.createdAt|date('d.m.Y H:i') : '' }}</td>
                        <td>
                            <div >
                                <a href="{{ path('app_order_show', {'id': order.id}) }}" >Просмотр</a>
                                <a href="{{ path('app_order_edit', {'id': order.id}) }}" >Редактировать</a>
                                {{ include('order/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        
    {% else %}
        <div class="alert alert-info text-center">
            <h4>Заказов пока нет</h4>
            <a href="{{ path('app_order_new') }}" >Создать заказ</a>
        </div>
    {% endif %}
{% endblock %}